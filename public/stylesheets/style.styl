*
  box-sizing border-box
  margin 0
  padding 0

body
  font-size: 14px
  font-family: Arial;

a
  color: #00B7FF

#canvas
  position relative
  height 800px
  width 600px
  background-color white

#status
  position absolute
  left 5%
  right 5%
  top 2%
  #awigo
    text-align right
    strong
      font-size 1.3rem
      color white
      background-color #444
      border-radius 6px
      text-align middle
      display inline-block
      margin 0 0.3em
      padding 0.18em 0.3em
      line-height 1em
      font-weight normal
      vertical-align top

#current
  position absolute
  left 0
  top 0
  height 50%
  width 33%
  img
    display block
    margin-top -10%
    margin-left -20%
    width 140%
  p
    margin-top -40%
    font-size 100px
    padding-left 0.25em
    text-align center
    span
      position relative
      &:after
        content ""
        position absolute
        right 13px
        font-size 0.15em
  &.current-delta--up span:after
    content "▲"
    top 0px
  &.current-delta--down span:after
    content "▼"
    top 46px

#special
  position absolute
  left 33%
  bottom 60%
  width 33%
  padding 50px 30px
  img
    width 80%
    height auto
    margin-left 10%
    margin-top 20%
    display block
    max-height 140px
  p
    text-align center
    a
      padding-top 2px
      color black
      display inline-block
      text-decoration none
    &[data-type=namenstag]
      small
        font-size 18px
        color black
        display block
        padding-bottom 2px
      a
        font-size 22px
        font-weight bold
        border-top 1px solid #999
    &[data-type=sondertag]
    &[data-type=fest]
      a
        font-size 19px
        border-top 1px solid #999
        border-bottom 1px solid #999

#today
  position absolute
  left 66%
  top 0
  width 33%
  height 50%
  padding 50px 30px
  font-size 40px

  #rain
    position relative
    margin-top 20px
    margin-left -50px
    margin-right -60px
    .rain-label
    .wind-label
    .ct-chart
      display inline-block
      vertical-align top
    .rain-label
      width 40px
      p
        margin 5px 0 5px
        font-size 20px
        text-align center
        small
          font-size 14px
      img
        display block
        width 70%
        margin-left 15%
    .wind-label
      text-align center
      p
        margin 5px 0 5px
        font-size 20px
        small
          font-size 14px
      img
        display block
        width 55%
        margin-left 25%
    .ct-chart
      margin-top -5px
      .ct-label
        color black
        margin-left -5px
        font-weight bold
      .ct-grid
        stroke #000
      .ct-line
        stroke #000
      .ct-series-a .ct-line
        stroke-width 4px
      .ct-series-b
        .ct-line
          stroke-width 3px
          stroke-dasharray 8, 4

  #house
    left 11%
    position absolute
    width 75%
    bottom 30%
  #bypass
    right 17.5%
    position absolute
    width 11%
    bottom 37%
    background-color white
    border-bottom 3px solid white
    border-top 3px solid white
  .temp
    left 27%
    position absolute
    width 50%
    bottom 35%
    font-size 1.3em
    text-align center
    span
      position relative
      &:after
        content ""
        position absolute
        right 6px
        font-size 0.18em
    &.temp-delta--up span:after
      content "▲"
      top -3px
    &.temp-delta--down span:after
      content "▼"
      top 24px
  .speed
    right 16%
    position absolute
    bottom 31.5%
    font-size 0.5em

#forecast
  position absolute
  left 0
  top 40%
  padding 15px
  height 60%
  width 100%
  h2
    font-weight normal
    font-size 1.3rem
    color #333
    strong
      font-size 1.2rem
      color white
      background-color #333
      border-radius 6px
      text-align middle
      display inline-block
      margin 0 0.3em
      padding 0.18em
      line-height 1em
      font-weight normal
      vertical-align top
      margin-top -0.05em
    .moon
      text-align middle
      display inline-block
      height 1.3rem
      margin -0.05em 0.2em 0
  section
    display inline-block
    width (100/5)%
    vertical-align top
    text-align center
    height 500px
  img
    display block
    margin 0 auto
    max-width 100%
    max-height 100%
  .range
    position relative
    height 280px
    margin 1rem 0
    width 100%
  .inner
    position absolute
    bottom 0%
    left 32%
    right 32%
    background-color #444
    border-radius 20px
    border 3px solid white
  .min
  .max
    font-size 1.6rem
    position absolute
    text-align right
    width 100%
    left 0em
    background-color white
  .max
    top -1.3em
  .min
    position absolute
    bottom -1.6em
  .grid-line
    position absolute
    left 0
    right 0
    border none
    border-bottom 3px dashed #999
  .grid-line_0
    border-bottom 4px dashed #999
  .grid-line_-20
  .grid-line_-10
  .grid-line_10
  .grid-line_20
  .grid-line_30
    border-bottom 2px dotted #999